  <div id="red_bar_title">
    <h1>
      <%= "Registro de usuário" %>
    </h1>
  </div>

  <div id="body_write">
  <div id="two-columns">
    <div id="column1">

      <% if session[:user_id] then %>
         <%= render :partial => "context_menu" %>
      <% end %>
        
     </div>
     <div id="column2">
      
       <p>Complete este pequeno registro para usufruir dos serviços oferecidos pelo PrankDev.</p>
       <div id="add_file">

        <% form_for(@user) do |f| %>
          <%= f.error_messages %>

          <p>
            <%= f.label :name, "Nome Completo" %><br />
            <%= f.text_field :name %>
          </p>
          <p>
            <%= f.label :username, "Nome de usuário" %><br />
            <%= f.text_field :username %>
          </p>
          <p>
            <%= f.label :user_password, "Senha" %><br />
            <%= f.password_field :password %>
          </p>
          <p>
            <%= f.label :user_password_confirmation, "Confirmar senha" %><br />
            <%= f.password_field :password_confirmation %>
          </p>
          <p>
            <%= f.submit 'Registrar' %>
          </p>
        <% end %>

        <p><%= image_tag("icons/back-icon.png", :border => 0, :size => "16x16" ) %>
          <%= link_to 'Voltar', :controller => 'admin', :action => 'login' %></p>
      </div>
       </div>
    </div>
    </div>

